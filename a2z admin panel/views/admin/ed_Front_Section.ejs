<div class="container  pb-5 pt-5 " style="width: 90%;">
<form action="/admin/update_About_Front_section" method="post" enctype="multipart/form-data">
    <div class="container  p-5 bg-secondary navbar-dark" style="box-shadow:0px 5px 10px red;" >
        <div class="row">
            <div class="pt-3  col-md-12 mt-2 mb-5">
                <h1 class="text-primary  text-center">Edit Front Section</h1>
            </div>
            <div class="pt-3  col-md-6 mt-2">
                About Heading
                <input type="text" name="Edit_About_Heading" class="form-control" value="<%=About_Heading%>">
            </div>
            <div class="pt-3  col-md-6 mt-2">
                About Title
                <input type="text" name="Edit_About_Title" class="form-control" value="<%=About_Title%>">
            </div>
            <div class="pt-3  col-md-6 mt-2">
                About description
                <input type="text" name="Edit_About_Description" class="form-control" value="<%=About_Description%>">
            </div>
            <div class="pt-3  col-md-6 mt-2">
                About Image
                <input type="file"  name="Edit_About_image" class="form-control bg-dark" >
            </div>
            <div class="pt-3  col-md-6 mt-2">
                <input type="hidden"  name="About_id" class="form-control" value="<%=About_id%>">
                <input type="hidden" name="current_image" value="<%=About_bg_image %>">
            </div>
            <div class="pt-3 col-md-3 mt-2 text-center">
                <img src="/img/<%=About_bg_image %>" alt="" style="height: 70px; width: 70px;" >
            </div>
            <div class="col-md-12 mt-5 text-center">
                <button class="btn btn-md text-white " style="background-color:red ";>Save Update About Infromation</button>
            </div>
        </div>

    </div>
</form>
</div>
</section>


