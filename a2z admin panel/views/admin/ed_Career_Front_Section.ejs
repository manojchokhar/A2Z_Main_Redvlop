<div class="container  pb-5 pt-5 " style="width: 90%;">
<form action="/admin/update_Career_Front_section" method="post" enctype="multipart/form-data">
    <div class="container  p-5 bg-secondary navbar-dark" style="box-shadow:0px 5px 10px red;" >
        <div class="row">
            <div class="pt-3  col-md-12 mt-2 mb-5">
                <h1 class="text-primary  text-center">Edit Career Front Section</h1>
            </div>
            <div class="pt-3  col-md-6 mt-2">
                Career Page Title
                <input type="text" name="Edit_Career_Title" class="form-control" value="<%=career_title%>">
            </div>
            <div class="pt-3  col-md-6 mt-2">
                About description
                <input type="text" name="Edit_Career_Description" class="form-control" value="<%=career_desc%>">
            </div>
            <div class="pt-3  col-md-6 mt-2">
                About Image
                <input type="file"  name="Edit_career_image" class="form-control bg-dark" >
            </div>
            <div class="pt-3  col-md-6 mt-2">
                <input type="hidden"  name="career_id" class="form-control" value="<%=career_id%>">
                <input type="hidden" name="current_image" value="<%=career_image%>">

            </div>
            <div class="pt-3 col-md-3 mt-2 text-center">
                <img src="/img/<%=career_image%>" alt="" style="height: 70px; width: 70px;" >
            </div>
            <div class="col-md-12 mt-5 text-center">
                <button class="btn btn-md text-white " style="background-color:red ";>Save Update Career Page Infromation</button>
            </div>
        </div>

    </div>
</form>
</div>
</section>


